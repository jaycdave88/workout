!!!
%html
%head
  %title Workout Application
  %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags
  %link{:href => "./assets/css/bootstrap.css", :rel => "stylesheet"}
%body
  %nav.navbar.navbar-default

    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", type: "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %navbar.brand
        = link_to "Workout Tracker", root_path, class: "navbar-brand move_center"
    .collapse.navbar-collapse.navbar-ex1-collapse
      .nav.navbar-nav.navbar-right
        - if user_signed_in? 
          = link_to "New Workout", new_workout_path, class: "btn btn-primary navbar-btn"
          = link_to "Log Out", destroy_user_session_path, :method => :delete ,class: "btn btn-default navbar-btn move_right"
  .container
    %p.notice= notice 
    %p.alert= alert 
    = yield


     
